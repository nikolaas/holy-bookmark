{
  "manifest_version": 2,

  "name": "Holy Bookmark",
  "description": "This extension allows the user to add bookmark from Telegram.",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "19": "icons/19x19.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "permissions": [
    "storage",
    "bookmarks",
    "alarms"
  ]
}